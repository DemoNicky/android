<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="8dp"
    android:outlineProvider="none"
    android:outlineAmbientShadowColor="@color/backgrnd"
    android:outlineSpotShadowColor="@color/backgrnd"
    android:layout_margin="8dp"
    android:id="@+id/cardview"
    android:clickable="true"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_headlines"
            android:src="@drawable/imagenotav"
            android:scaleType="centerCrop"
            android:layout_weight="2"
            android:layout_width="match_parent"
            tools:ignore="UnusedAttribute"
            android:layout_height="220dp">
        </ImageView>

        <LinearLayout
            android:layout_below="@+id/img_headlines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:weightSum="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="adwadawdaw"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/text_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:text="adwadawdaw"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>
        </LinearLayout>
    </RelativeLayout>

